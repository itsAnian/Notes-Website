<!DOCTYPE html>
<html lang="de">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Note</title>
        <link rel="stylesheet" href="https://cdn.simplecss.org/simple.min.css">
    </head>
    <body>
        <div class="container">
            <h1>Note</h1>
            <form action="/savenote" method="POST">
                <input type="hidden" name="id" value="<%= note ? note.id : '' %>">

                <label for="title">Title:</label>
                <input type="text" id="title" name="title" required value="<%= note ? note.title : '' %>">

                <label for="important">Important:</label>
                <input type="checkbox" id="important" name="important" <%= note && note.important ? 'checked' : '' %>>
                <br>

                <label for="content">Content:</label>
                <textarea id="content" name="content" rows="20" required><%= note ? note.content : '' %></textarea>

                <label for="tags">Tags (max. 5, seperated with ','):</label>
                <input type="text" id="tags" name="tags" value="<%= Array.isArray(tags) ? tags.map(tag => tag.tag).join(', ') : '' %>">

                <br>
                <button type="submit">Save</button>
            </form>
            <a href="/dashboard" class="btn">Back to dashboard</a>
        </div>
    </body>
</html>
